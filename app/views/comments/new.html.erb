<%= form_with model: [@post, @comment], url: create_post_comment_path  do |form| %>
  <% if @comment.errors.any? %>
    <div>
      <% @comment.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>
  <div class="">
    <%= form.text_field :text, placeholder: "Add new comment here", class: "" %>
  </div>
  <% if can? :delete, comment %>
            <%= button_to 'Delete', post_comment_path(@post, comment), method: :delete,
                          data: { confirm: 'Are you sure?' } %>
  <% end %>
  <div class="">
    <%= form.submit "Comment" %>
  </div>
<% end %>