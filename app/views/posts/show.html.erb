<article>

  <section class="container-post-id">
    <div class="dflex-saround">
      <h3>Post # <%= @post.id %> by <%= @post.author.name %><h3>
      <div>
        <span>Comments: <%= @post.comments_counter %></span>
        <span>Likes: <%= @post.likes_counter %></span>
      </div>
    </div>

    <div class="post-title-id">
      <h2><%= @post.title %></h2>
    </div>

    <p>
      <%= @post.text %>
    </p>
    
  </section>

<div>
  <p>Add a comment</p>
  <%= form_with model: @comment, url: "/comments/#{@post.id}" do |form| %>
    <div>
      <%= form.label :comment %>
      <%= form.text_area :text, required: true %>
    </div>
    <%= form.submit "Submit" %>
  <% end %>
<div>

  <section>
  <div class="comments-container">
  Comments: 
    <div class="flex-column">
    <% @recent_comments.each do |comment| %>
      <span><%= comment.author.name %> : <%= comment.text %></span> 
    <% end %> 
    </div>
</div>
  </section>


</article>