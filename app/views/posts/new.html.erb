<section>
  <h2>New Post</h2>
  <%= form_with model: @post, url: posts_new_path do |form| %>
    <div>
       <%= form.label :title %>
       <%= form.text_field :title, required: true %>
    </div>
    <div>
      <%= form.label :text %>
      <%= form.text_area :text, required: true %>
    </div>
    <%= form.submit "Submit" %>
  <% end %>
</section>